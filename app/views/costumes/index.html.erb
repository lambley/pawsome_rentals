<div data-controller="index-filter">
  <div class="index-top">
    <h1 class="col">Costumes</h1>
    <div class="index-top-filters" data-index-filter-target="filters">
      <div id="dog-filter">
        <div data-index-filter-target="dog" data-action="click->index-filter#dogFilter" class="col">
          <%= cl_image_tag("dog_dvkm1h")%>
        </div>
      </div>
      <div id="cat-filter">
        <%= link_to costumes_path(query: "cat"), class: "col", data: {
          index_filter_target: "cat",
          action: "click->index_filter#filter"
          } do%>
          <%= cl_image_tag("cat_qmzdnd") %>
          <p>Cats Only</p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="index-container">
    <%= render 'shared/map' %>
    <div class="costumes-card-container">
      <% @costumes.each do |costume| %>
        <%= link_to costume_path(costume), class: "card-link-no-deco" do %>
          <%= render 'shared/card', costume: costume, data: { index_filter_target: "card" } %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
